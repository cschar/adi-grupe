

<div class="row">

  <div class="jumbotron">

    <div>
    Display Name: <%= @user.display_name %>
    

    <i class="ra ra-castle-emblem ra-5x" style="color:#1d9d74;"></i>
    </div>

    <div class="d-block p-4 m-2 bg-light">
