
<% ab_finished(:splash_page) %>

<h1>Quests</h1>

<%= paginate @quests, theme: 'twitter-bootstrap-4', remote: false %>
<table class="table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Qtype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quests.each do |quest| %>
      <tr>
        <td><%= quest.name %></td>
        <td><%= quest.body.html_safe %></td>
        <td><%= quest.qtype %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @quests, theme: 'twitter-bootstrap-4', remote: false %>
