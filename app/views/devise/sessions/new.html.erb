
<div class="form-signin row">

  <i class="fa fa-thermometer-full fa-4x"></i>

  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => "sr_only" %><br />
        <%= f.email_field :email, autofocus: true, :class => "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, :class => "sr_only" %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field checkbox mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
      <% end -%>

      <!--<div class="btn btn-lg btn-primary btn-block">-->
      <!--<%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block"%>-->
      <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
      <!--</div>-->
  <% end %>

  <%= render "devise/shared/links" %>
</div>


