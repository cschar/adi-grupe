<p id="notice"><%= notice %></p>

<h3> Grupe: <%= @grupe.name %>  <%= @grupe.id %> @ location
  <a href="#InfoAnchor1" data-turbolinks="false"> <%= @grupe.location_id.to_s + " " + @grupe.location.name %></a>
   grouping for
  <a href="#InfoAnchor2" data-turbolinks="false"> 5 quests </a>
</h3>

<% if @grupe.users.all.count < 5 &&
    (@grupe.users.where(id: current_user.id).count == 0) %>
  <%= link_to join_grupe_path(@grupe.id), class: "btn btn-outline-primary"  do %>
      Join up <i class="fa fa-cubes fa-2x"></i>
  <% end %>
<% end %>

<%= tag.div id: "single-location-info", data: { locationinfo: @grupe.location.to_json() } do %>

<% end %>


<%= tag.div class: "row" do %>

  <% @grupe.users.all.each do |user|%>
      <div class="col-sm-2 color3 ">
        <i class="fa fa-user-circle fa-2x"></i>
        <ul>
          <li>user <%= user.id %></li>
          <li> <%=  FFaker::Color.name  + FFaker::CheesyLingo.sentence.split(" ").sample  %></li>
        </ul>

      </div>

  <% end %>
  <!--5 max in grupe, show empty spots if less than 5-->
  <% [*@grupe.users.all.count..4].each do |placeholder|%>
      <div class="col color3 offset-sm-1">
        <i class="fda fa-square-o fa-2x"></i>
        nil
      </div>
  <% end %>

<% end %>  <!-- end div -->



<a name="InfoAnchor2"></a>
<div class="row">
  <div class="col ">
    <div id="chat" class="d-flex flex-column color2">
      <div class="mb-auto p-2"> quest 1 : Talk about XYZ </div>
      <div class="m-2"> quest 2 : Walk to nearby location < some location of interest OR other tavern> </div>
      <div class="ml-5 mt-2 mb-5 "> <span class=color1">quest 3 </span> (user 1 - profession {song collector}): Sing a song / learn a verse / write a verse </div>
      <div class="mt-2 mb-5 "> <span class="color1">quest 4 </span>
        Share a song. What do you think about it and how does it make you feel.
        <br/> Tooltip Here exploding feelings into choice box archetypes
        (glad/sad/mad/tired/confused/lonely/excited/friendly/calm)
      </div>

    </div>
  </div>
  <div class="col">
    <h2> Detail for each quest when mouse rolls over </h2>

  </div>
</div>


<div class="row">
  <a name="InfoAnchor1"></a>
  <div class="col ">
    <div>
      <h3> Details about location</h3>
      <ul>
        <li> <i class="fa fa-database" ></i> star level: <%= [*5..30].sample %>
        </li>
        <li> <i class="fa fa-bolt" aria-hidden="true"></i> Info 1
        </li>
      </ul>
    </div>
  </div>
  <div class="col">
    a map
    <%= tag.div nil, id: 'map' %>
  </div>
</div>


<div class="row">
  <div class="d-flex align-items-start flex-column" style="height: 200px;">
    <div class="mb-auto p-2">Flex item</div>
    <div class="p-2">Flex item</div>
    <div class="p-2">Flex item</div>
  </div>
</div>








